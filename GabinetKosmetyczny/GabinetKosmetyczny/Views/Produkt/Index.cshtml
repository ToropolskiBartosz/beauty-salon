@model IEnumerable<GabinetKosmetyczny.produkty>

@{
    ViewBag.Title = "Index";
}

<h2>Produkty</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nazwa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cena)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.producent)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nazwa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cena)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.producent)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id_produktu }) |
            @Html.ActionLink("Details", "Details", new { id=item.id_produktu }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id_produktu })
        </td>
    </tr>
}

</table>
